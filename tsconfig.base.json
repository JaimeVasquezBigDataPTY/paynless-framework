{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false, // Consider enabling later
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false, // Can be noisy, enable if desired
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node", // Changed from Bundler to Node for better compatibility
    "baseUrl": ".", // Needed for path aliases
    "paths": {
      "@paynless/*": ["packages/*/src"]
    },
    "resolveJsonModule": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist", // Default output, packages can override
    "removeComments": false,
    "composite": true, // Enable for project references
    "incremental": true, // Faster builds in monorepo

    // JavaScript Support
    "allowJs": false,
    "checkJs": false,

    // Interop Constraints
    "isolatedModules": true, // Ensures files can be transpiled independently
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Language and Environment
    "target": "ESNext",
    "lib": ["ESNext"], // Base lib, apps/packages will add more (like "DOM")
    "jsx": "react-jsx", // Default JSX, apps/packages can override if needed
    "useDefineForClassFields": true,

    // Completeness
    "skipLibCheck": true // Skip type checking of declaration files (node_modules)
  },
  // Typically, base doesn't include/exclude files directly
  // "include": [], 
  // "exclude": ["node_modules"]
} 